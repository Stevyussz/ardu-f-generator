{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "rootDir": "./",
    "outDir": "./dist",

    "resolveJsonModule": true,
    "esModuleInterop": true,

    "strict": true,
    "skipLibCheck": true,

    "types": ["node"],

    "baseUrl": "../",
    "paths": {
      "@shared/*": ["shared/*"]
    }
  },

  "include": ["./**/*.ts"],
  "exclude": ["dist", "node_modules"]
}
