{
  "compilerOptions": {
    "target": "ES2020",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "outDir": "dist",
    "rootDir": ".",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": false,
    "paths": {
      "@shared/*": ["../shared/*"]
    }
  },
  "include": ["*.ts"],
  "exclude": ["dist"]
}
